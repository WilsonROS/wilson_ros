<launch>
  <master auto="start"/>

  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_omni.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find wilson_ros)/config/robot/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find wilson_ros)/config/robot/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find wilson_ros)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find wilson_ros)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find wilson_ros)/config/robot/base_local_planner_params.yaml" command="load" />
  </node>

  <include file="$(find wilson_ros)/launch/coverage.launch"/>
  <include file="$(find wilson_ros)/launch/zone_generator.launch"/>
  <include file="$(find wilson_ros)/launch/planner.launch"/>
</launch>
